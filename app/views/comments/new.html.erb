<% if @comment.review %>
<h1>New Comment on <%= @comment.review.title%></h1>
<%else%>
<h1>New Comment</h1>
<%end%>

<%=render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for([@comment.review, @comment]) do |f| %>
    <% if !@comment.review %>
        <%= f.label :review %>
        <%= f.collection_select :review_id, Review.all, :id, :title %>
    <%else%>
        <%= f.hidden_field :review_id %>
    <%end%>

    <%= f.label :content %>
    <%= f.text_area :content, size: "25x5" %>

    <%= f.submit %>
    
<%end%>




