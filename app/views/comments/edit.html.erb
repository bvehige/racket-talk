<h2>Edit Comment</h2>

<%= render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for(@comment) do |f|%>
    <div>
    <%= f.label :review %>
    <%= f.collection_select :review_id, Review.all, :id, :title %>
    </div>
    <br>
    <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x5" %>
    </div>
    <br>
    <%= f.submit %>
    <br>
    OR  
    <br>   
<%end%>

<%= button_to "Delete Comment", comment_path(@comment), method: :delete %>
