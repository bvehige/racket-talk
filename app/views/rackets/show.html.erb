

<% if @racket.image.attached? %>
  <%= image_tag url_for(@racket.image) %>
<% end %>

<h1> <%= @racket.brand.name %> <%= @racket.racket_name %> </h1>
<p> <%= @racket.description%> </p>
<p>Originally added on <%=@racket.created_at.strftime("%m/%d/%Y")%></p> 
<% if @racket.updated_at?%>
<p>Updated on <%=@racket.updated_at.strftime("%m/%d/%Y")%></p>
<%end%>

<%= link_to "Add a new review for this racket", new_racket_review_path(@racket.id) %> | <%= link_to "Edit this Racket", edit_racket_path(@racket)%> | <%= link_to "See all reviews for this racket", racket_reviews_path(@racket) %>





