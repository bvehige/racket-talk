<%= render partial: "layouts/errors", locals: {object: @racket} %>

<%= form_for(@racket) do |f| %>
    
    <div>
    <%= f.label :racket_name %>
    <%= f.text_field :racket_name %>
    </div>
    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <p> Select a Brand that already exists </p>
    <div>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: 'Select One' %>
    </div>
    
    <p> Or create a new Brand </p>
    <div>
    <%= f.fields_for :brand do |b| %>
        <%= b.label :name %>
        <%= b.text_field :name %>

        <% end %>
    </div>
    <br>
    <div>
    <%= f.label "Add a Picture" %>
    <%= f.file_field :image %>
    </div>
<br>
    <%= f.submit "Submit" %>
<% end %>

