<% if @racket %>
    <h1>Reviews for <%= @racket.brand.name%> <%=@racket.racket_name%></h1>
<%else%>

<h1>5 Star Reviews</h1>
<%@reviews.five_stars.each do |r|%>
    <li>
    <b><%= r.racket.brand.name%> <%= r.racket.racket_name%>:</b>  <%= link_to r.title, review_path(r) %>
    <br>
    <% if r.racket.image.attached?%>
    <%= image_tag url_for(r.racket.image)%> 
    <%end%>
    </li>
    <%end%>

<h1>All the Reviews</h1>
<%end%>
<ul>
<% @reviews.each do |r| %>
    <li>
    <b><%= r.racket.brand.name%> <%= r.racket.racket_name%>:</b>  <%= link_to r.title, review_path(r) %> - <%= r.stars %> stars
    </li>
    <br>
<% end %>
</ul>