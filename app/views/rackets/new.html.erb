<h1>Add A New Racket</h1>

<%= render partial: "layouts/errors", locals: {object: @racket} %>

<%= form_for(@racket) do |f| %>

    <p> Select a Brand that already exists </p>
    <div>
    <%= f.collection_select :brand_id, Brand.alphabetical, :id, :name, include_blank: 'Select One' %>
    </div>
    
    <p> Or create a new Brand </p>
    <div>
    <%= f.fields_for :brand do |b| %>
        <%= b.label "Brand Name" %>
        <%= b.text_field :name %>
        <% end %>
    </div>
    <br>
    <div>
    <%= f.label :racket_name %>
    <%= f.text_field :racket_name %>
    </div>
    <div>
    <%= f.label "Racket description" %>
    <%= f.text_field :description %>
    </div>
    <br>
    <div>
    <%= f.label "Add a picture" %>
    <%= f.file_field :image %>
    </div>

    
<br>
    <%= f.submit "Submit" %>
<% end %>
